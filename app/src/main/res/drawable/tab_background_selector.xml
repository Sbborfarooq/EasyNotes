<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/mainAppColor" /> <!-- The blue color for selected tab -->
            <corners android:radius="50dp" /> <!-- Pill shape -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F1F1F1" /> <!-- Light gray for unselected tabs -->
            <corners android:radius="50dp" /> <!-- Pill shape -->
        </shape>
    </item>
</selector>
